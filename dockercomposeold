services:
  db:
    image: postgres:16-alpine
    container_name: boxin1_cloud_service_db
    restart: always
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: 123456
      POSTGRES_DB: boxin1
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
  
  app:
    build: .
    container_name: boxin1_cloud_service_api
    restart: always
    depends_on:
      - db
    env_file:
      - .env
    ports:
      - "3000:3000"

volumes:
  pgdata:
